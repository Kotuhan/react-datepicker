@import "reset-context";

.time-input-container {
    reset-context();

    position: relative;
}

.time-input {
    background-color: #ffffff;
    background-image: none;
    border: 1px solid #cccccc;
    border-radius: 3px;
    width: 120px;

    > input {
        display: block;
        width: 100%;
        padding: 5px 0;
        padding-left: 30px;
        padding-right: 12px;
        font-size: 13px;
        color: #222222;
        border: none;
    }
}

.input-icon-label {
    position: absolute;
    left: 9px;
    top: 50%;
    margin-top: -10px;
    color: #666666;
}
